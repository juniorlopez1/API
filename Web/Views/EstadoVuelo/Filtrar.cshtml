@model FiltroViewModel

@{
    ViewData["Title"] = "Estado de vuelo";
}

<h1>Reporte de estado de vuelo</h1>

<form asp-action="Reporte">
    <div class="form-group row">
        <div class="form-group col-md-4">
            <label>Tipos de aeronaves</label>
            @Html.DropDownListFor(m => m.Codigo, (IEnumerable<SelectListItem>)ViewBag.ListaEstadoVuelo, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <input type="submit" class="btn btn-primary form-control" value="Filtrar">
        </div>
    </div>
</form>
<hr />