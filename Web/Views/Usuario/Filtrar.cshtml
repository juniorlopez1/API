@model Web.Models.FiltroViewModel

@{
    ViewData["Title"] = "Filtro";
}

<h1>Filtro</h1>

<form asp-action="Reporte">
    <div class="form-group row">
        <div class="form-group col-md-4">
            <label>Estado de Usuario</label>
            @Html.DropDownListFor(m => m.Codigo, (IEnumerable<SelectListItem>)ViewBag.ListaEstadoUsuario, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-2">
            <label>&nbsp;</label>
            <input type="submit" class="btn btn-primary form-control" value="Filtrar">
        </div>
    </div>
</form>
<hr />
