@model IEnumerable<Web.Models.RegistroViewModel>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista</h1>

<p>
    <a asp-action="Editar">Crear Registro</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Ingreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salida)
            </th>
            <th>
                Codigo Aeronave
            </th>
            <th>
                Capacidad
            </th>
            <th>
                Tipo Aeronave
            </th>
            <th>
